<resources>

    <style name="AppTheme.Pink" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pinkDark</item>
        <item name="colorAccent">@color/pinkAccent</item>
    </style>

    <style name="AppTheme.Cyan" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyanDark</item>
        <item name="colorAccent">@color/cyanAccent</item>
    </style>

    <style name="AppTheme.Violet" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violetDark</item>
        <item name="colorAccent">@color/violetAccent</item>
    </style>

    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <item name="colorAccent">@color/redAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pinkDark</item>
        <item name="colorAccent">@color/pinkAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
